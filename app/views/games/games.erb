  <% @user.games.each do |game| %>
      <div class="max-w-sm overflow-hidden shadow-lg mx-10 my-10">
        <% if game[:img_url] %>
          <img class="object-scale-down flex" id="imagesizer" src="<%= game[:img_url] %>" alt ="<%= game[:name] %>">
        <% else %>
          <img class="w-full" src="/images/gameboard.jpg" alt ="<%= game[:name] %>">
        <% end %>
        <div class="px-6 py-4">
          <div class="font-bold text-xl mb-2"><%= game[:name] %></div>
          <p class="text-gray-700 text-base">
          <b>Publisher: </b><%= game[:publisher] %>
          </p>
          <p class="text-gray-700 text-base">
          <b>Year Published: </b><%= game[:year_published] %>
          </p>
          <p class="text-gray-700 text-base">
          <b>Player Count: </b><%= game[:player_count] %>
          </p>
          <p class="text-gray-700 text-base">
          <b>Playing Time: </b><%= game[:playing_time] %>
          </p>
          <p class="text-gray-700 text-base">
